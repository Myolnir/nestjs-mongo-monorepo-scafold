{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@app/server": ["libs/server/src"],
      "@app/server/*": ["libs/server/src/*"],
      "@app/logger": ["libs/logger/src"],
      "@app/logger/*": ["libs/logger/src/*"],
      "@app/events": ["libs/events/src"],
      "@app/events/*": ["libs/events/src/*"],
      "@app/exceptions": ["libs/exceptions/src"],
      "@app/exceptions/*": ["libs/exceptions/src/*"],
      "@app/filters": ["libs/filters/src"],
      "@app/filters/*": ["libs/filters/src/*"],
      "@app/interceptors": ["libs/interceptors/src"],
      "@app/interceptors/*": ["libs/interceptors/src/*"],
      "@app/common-dtos": ["libs/common-dtos/src"],
      "@app/common-dtos/*": ["libs/common-dtos/src/*"],
      "@app/utils": ["libs/utils/src"],
      "@app/utils/*": ["libs/utils/src/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
