{
  "name": "api",
  "version": "1.0.0",
  "description": "NestJS Mongo Scafolding",
  "author": "angel.muelas@gmail.com",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \\\"apps/**/*.ts\\\" \\\"libs/**/*.ts\\\"",
    "start": "NODE_ENV=production nest start",
    "prestart:prod": "rm -rf dist && tsc",
    "start:dev": "NODE_ENV=develop nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "NODE_ENV=test npm run test:unit --forceExit",
    "test:unit": "NODE_ENV=test jest --config ./jest-unit.json -i --forceExit --no-cache",
    "test:cov": "jest --config ./jest-unit.json --verbose --forceExit --runInBand --detectOpenHandles --collect-coverage; open ./coverage/lcov-report/index.html"
  },
  "dependencies": {
    "@godaddy/terminus": "^4.3.1",
    "@nestjs/common": "^7.0.2",
    "@nestjs/config": "^0.4.0",
    "@nestjs/core": "^7.0.2",
    "@nestjs/jwt": "^7.0.0",
    "@nestjs/microservices": "^7.0.2",
    "@nestjs/mongoose": "^6.4.0",
    "@nestjs/platform-express": "^7.0.8",
    "@nestjs/swagger": "^4.4.0",
    "@nestjs/terminus": "^6.5.6",
    "aws-cloudfront-sign": "^2.2.0",
    "aws-sdk": "^2.661.0",
    "bcrypt": "^4.0.1",
    "bunyan": "1.8.12",
    "class-transformer": "0.3.1",
    "class-validator": "0.11.0",
    "cls-hooked": "^4.2.2",
    "dotenv": "8.2.0",
    "express-rate-limit": "5.0.0",
    "helmet": "3.21.2",
    "lint-staged": "^10.0.7",
    "lodash": "^4.17.15",
    "mongoose": "^5.9.7",
    "qs": "^6.9.4",
    "redis": "^3.0.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.0",
    "rxjs": "^6.5.4",
    "swagger-stats": "^0.95.17",
    "swagger-ui-express": "^4.1.2",
    "util": "^0.12.1",
    "uuidv4": "^6.0.5"
  },
